<h1>Listings</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Property Owner</th>
    <th></th>
  </tr>

  <% @listings.each do |listing| %>
    <tr>
      <td><%= listing.title %></td>
      <td><%= listing.text %></td>
      <td><%= listing.username %></td>
      <td><%= link_to 'Show', listing_path(listing) %></td>
      <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
      <td><%= link_to 'Destroy', listing_path(listing),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>    </tr>
  <% end %>
</table>

<%= link_to 'View Users', users_path %>
<%= link_to 'Add a listing', new_listing_path %>
<%= link_to 'Home', root_path %>
